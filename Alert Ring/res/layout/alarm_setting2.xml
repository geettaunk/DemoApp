<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:layout_marginLeft="5sp" android:background="@color/Blue">
<TextView android:text="TextView" android:id="@+id/textView7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true"></TextView>    <TextView android:id="@+id/textView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Alarm Name" android:textSize="15sp" android:layout_marginTop="20sp"></TextView>
    <EditText android:id="@+id/editText1" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_below="@+id/textView1" android:layout_marginTop="5sp" android:editable="true" android:cursorVisible="true" android:textSize="15sp" android:selectAllOnFocus="true" android:text="My Alarm"></EditText>
    <TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Time" android:textSize="15sp" android:layout_below="@+id/editText1" android:layout_marginTop="10sp"></TextView>
    <EditText android:id="@+id/editText2" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_below="@+id/textView2" android:layout_marginTop="5sp" android:selectAllOnFocus="true" android:textSize="15sp" android:gravity="center" android:editable="false" android:clickable="true" android:cursorVisible="false" android:text="11:00"></EditText>
    <TextView android:id="@+id/textView3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/editText2" android:layout_marginTop="10sp" android:text="Ringtone"></TextView>
    <EditText android:id="@+id/editText3" android:layout_height="wrap_content" android:layout_below="@+id/textView3" android:layout_marginTop="5sp" android:layout_width="245sp" android:textSize="15sp" android:selectAllOnFocus="true" android:cursorVisible="false" android:editable="false" android:text="glass broken....."></EditText>
    <Button android:id="@+id/button1" android:layout_height="wrap_content" android:text="Browse" android:layout_below="@+id/editText2" android:layout_toRightOf="@+id/editText3" android:layout_marginTop="32sp" android:layout_width="100sp"></Button>
    <TextView android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/button1" android:text="Vibration" android:layout_marginTop="15sp"></TextView>
    <ToggleButton android:text="ToggleButton" android:id="@+id/toggleButton1" android:layout_toRightOf="@+id/textView4" android:layout_below="@+id/button1" android:layout_marginTop="5sp" android:layout_marginLeft="189sp" android:layout_height="50sp" android:layout_width="70sp"></ToggleButton>
    <TextView android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/textView4" android:layout_marginTop="20sp" android:text="Select Days"></TextView>
    <CheckBox android:id="@+id/checkBox1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/textView5" android:text="SUN"></CheckBox>
    <CheckBox android:id="@+id/checkBox2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/textView5" android:layout_toRightOf="@+id/checkBox1" android:text="MON" android:layout_marginLeft="55sp" android:checked="true"></CheckBox>
    <CheckBox android:id="@+id/checkBox3" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/checkBox2" android:layout_below="@+id/textView5" android:text="TUE" android:layout_marginLeft="46sp" android:checked="true"></CheckBox>
    <CheckBox android:id="@+id/checkBox4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/checkBox1" android:text="WED"></CheckBox>
    <CheckBox android:id="@+id/checkBox5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/checkBox2" android:layout_toRightOf="@+id/checkBox4" android:text="THU" android:layout_marginLeft="53sp"></CheckBox>
    <CheckBox android:id="@+id/checkBox6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_toRightOf="@+id/checkBox5" android:layout_below="@+id/checkBox3" android:text="FRI" android:layout_marginLeft="54sp"></CheckBox>
    <CheckBox android:id="@+id/checkBox7" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/checkBox4" android:text="SAT" android:layout_marginLeft="2sp"></CheckBox>
    <TextView android:id="@+id/textView6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@+id/checkBox7" android:text="Snooze Time" android:textSize="15sp" android:layout_marginTop="10sp"></TextView>
    <EditText android:id="@+id/editText4" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_below="@+id/textView6" android:layout_marginTop="5sp" android:editable="true" android:text="10 minute" android:selectAllOnFocus="true" android:textSize="15sp" android:gravity="center"></EditText>
    <Button android:id="@+id/button2" android:layout_height="wrap_content" android:layout_below="@+id/editText4" android:text="Save" android:layout_marginTop="10sp" android:layout_width="100sp"></Button>
    <Button android:id="@+id/button3" android:layout_height="wrap_content" android:text="Cancel" android:layout_toRightOf="@+id/button2" android:layout_below="@+id/editText4" android:layout_marginTop="10sp" android:layout_width="100sp" android:layout_marginLeft="120sp"></Button>
    
</RelativeLayout>
</ScrollView>
